#!/usr/bin/env bash
set -e

test -z $TMUX && exec nvim $@

if test -x "$(command -v tmate)" && test "$(tmate show -gvq '@is-tmate')" = 1; then
    exec nvim $@
else
    # Test if tmux has zoom enabled
    if tmux list-panes -F '#F' | grep -q Z; then
        # Zoom out if so
        tmux resize-pane -Z
    fi

    nvr -s --nostart $@ || exec nvim $@
fi
