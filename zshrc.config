# No delay when pressing ESC
KEYTIMEOUT=1
# Make zsh completions work
fpath=(/usr/local/share/zsh-completions $fpath)

# Editor config
export EDITOR='vim'

# Aliases
alias gs='git status'
alias gm='git commit -m'
alias ga='git add'
alias gd='git diff'
alias rbnodemon='nodemon -e rb -i ".git/**/*"  -x "rspec --fail-fast"'
alias t='tmux attach -t base || tmux new -s base'

# Reload path for autocompletion
autoload -U compinit compdef
compinit

strip-cnpj() {
	echo $@ | sed 's/[\.\/\-]//g' | pbcopy
}
