function! JavaScriptChuncklock()
    normal! ^va{`>$
    let tail_pos = getpos('.')
    normal! `<^
    let head_pos = getpos('.')
    if tail_pos == head_pos
        return 0
    endif
    return ['v', head_pos, tail_pos]
endfunction

